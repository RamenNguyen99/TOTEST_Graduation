<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen20dp"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dimen10dp"
    android:paddingBottom="@dimen/dimen10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen10dp"
        android:layout_weight="1"
        android:src="@drawable/ic_ques" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/showAnswer"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/switchShowAnswer"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <Switch
        android:id="@+id/switchShowAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dimen30dp"
        android:layout_weight="1" />

</LinearLayout>
